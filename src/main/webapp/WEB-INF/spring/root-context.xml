		<property name="url" value="jdbc:oracle:thin:@database-2.chtq1vmeaauu.ap-northeast-2.rds.amazonaws.com:1521:ORCL"/>
		<property name="username" value="macsim"/>
		<property name="password" value="macsim"/>
	</bean>



